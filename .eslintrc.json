{
    "env": {
        "browser": true,
        "commonjs": true,
        "node" : true,
        "es6": true,
        "jest/globals" : true
    },
    "parserOptions": {
        "ecmaVersion" : 8
    },
    "plugins" : ["jest"],
    "extends": "eslint:recommended",
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "args": "none",
                "caughtErrors": "none"
            }
        ],
        "no-console": [
            "off"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}